<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.acba.common.view.base.AcbaTextInputLayout
        android:id="@+id/email_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.acba.common.view.base.AcbaEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:error="incorrect email"
            android:inputType="text"
            android:imeOptions="actionDone"
            app:layoutId="@+id/email_input_layout"
            app:types="1" />
    </com.acba.common.view.base.AcbaTextInputLayout>

    <com.acba.common.view.base.AcbaTextInputLayout
        android:id="@+id/password_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/email_input_layout">

        <com.acba.common.view.base.AcbaEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:error="wrong password"
            android:inputType="text"
            android:imeOptions="actionDone"
            app:layoutId="@+id/password_input_layout"
            app:types="2" />
    </com.acba.common.view.base.AcbaTextInputLayout>


    <com.acba.common.view.base.AcbaButton
        android:id="@+id/button_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validate"
        android:layout_marginTop="20dp"
        app:isPreventDoubleClick="true"
        app:layout_constraintTop_toBottomOf="@id/password_input_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <include
        android:id="@+id/loading_layout"
        layout="@layout/loading_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>