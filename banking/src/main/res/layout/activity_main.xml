<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.example.common.view.validatoredittext.CustomTextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.example.common.view.validatoredittext.CustomEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text"
                app:isRequired = "true"
                app:validatorType="email"
                app:layoutId="@+id/email_input_layout" />
        </com.example.common.view.validatoredittext.CustomTextInputLayout>

        <com.example.common.view.validatoredittext.CustomTextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/email_input_layout">

            <com.example.common.view.validatoredittext.CustomEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text"
                app:layoutId="@+id/password_input_layout" />
        </com.example.common.view.validatoredittext.CustomTextInputLayout>


        <com.example.common.view.base.CustomButton
            android:id="@+id/button_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Validate"
            app:isPreventDoubleClick="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_input_layout" />

        <com.example.common.view.base.CustomButton
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Register"
            app:isPreventDoubleClick="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_validate" />

        <!--    <include-->
        <!--        android:id="@+id/loading_layout"-->
        <!--        layout="@layout/loading_layout" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>